<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flip.flip"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/flipcoin"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.flip.flip.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.flip.flip.FlipCoinAlarm"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.flip.flip.FlipMenuList"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_flip_menu_list"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.flip.flip.Note"
            android:label="@string/title_activity_note" >
        </activity>
        <activity
            android:name="com.flip.flip.Postfeed"
            android:label="Send Feedback" >
        </activity>
        <activity
            android:name="com.flip.flip.Feedsend"
            android:label="View Feedback" >
        </activity>

        <receiver android:name="com.flip.flip.ReminderAlarmFlip" >
        </receiver>

        <activity
            android:name="com.flip.flip.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.flip.flip.ChangeCoin"
            android:label="@string/title_activity_change_coin"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.flip.flip.Splash"
            android:label="@string/title_activity_splash" 
            android:screenOrientation="portrait" >
                       <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
